{
    "plugins": ["plugins/markdown"],
    "recurseDepth": 10,
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "templates": {
        "cleverLinks": false,
        "monoLinks": false,
        "default": {
            "outputSourceFiles": true
        }
    },
    "opts": {
        "template": "node_modules/jsdoc-minami",
        "encoding": "utf8",
        "destination": "./docs/",
        "recurse": true
    }
}
